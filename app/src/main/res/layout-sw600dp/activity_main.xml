<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/course_list_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/course_list_fragment"
        android:name="com.jofiagtech.listfragment.fragment.CourseListFragment"
        tools:layout="@layout/course_list_fragment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/course_details_container"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

